{
    "name": "immediate/android-services-bundle",
    "description": "Android-Publisher-services-bundle allows you to easily integrate with Android services and call their API end point",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        },
        "google/apiclient-services": [
            "AndroidPublisher"
        ]
    },
    "require": {
        "php": "^8.1",
        "google/apiclient": "^2.10",
        "symfony/validator": "6.4.*"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "overtrue/phplint": "^9.5",
        "phpmd/phpmd": "^2.15",
        "phpunit/phpunit": "^12.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.11",
        "symfony/phpunit-bridge": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "IM\\Fabric\\Bundle\\AndroidServicesBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IM\\Fabric\\Bundle\\AndroidServicesBundle\\Test\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "check-coverage": "vendor/bin/phpunit --coverage-html build && open build/index.html",
        "run-tests": "composer run-phpunit && composer run-phpcs && composer run-phpmd && composer run-phplint",
        "run-phpcs": "vendor/bin/phpcs",
        "run-phpmd": "vendor/bin/phpmd src text phpmd-src.xml && vendor/bin/phpmd tests --exclude=tests/cache text phpmd-tests.xml",
        "run-phplint": "vendor/bin/phplint",
        "run-phpunit": "vendor/bin/phpunit --testdox --exclude-testsuite=Feature"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
